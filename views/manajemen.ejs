<div class="container mt-3">
  <div class="col-md-12">
    <p>
      <h2 class="fw-bold">Manajemen Buku</h2>
    </p>
    <div class="mt-5">
      <!--? Button  modal -->
      <button type="button" class="btn btn-primary" data-bs-toggle="modal"  data-bs-target="#tambahBuku">
        Tambah Buku
      </button>
    </div>
    <div class="row mt-3">
      <% bukus.forEach(buku => { %>
        <div class="col-md-4 mt-3">
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title"><%= buku.judul %></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= buku.pengarang %></h6>
              <div class="mt-3"> 
                <button class="btn btn-warning badge" type="button" data-bs-toggle="collapse" data-bs-target="#<%= buku.judul %>" aria-expanded="false" aria-controls="<%= buku.judul %>">
                      Edit
                </button>
                <!-- ? Tampil edit -->
                <div class="collapse" id="<%= buku.judul %>">
                  <div class="col-md-12">
                    <form method="POST" action="/manajemen?_method=PUT">
                      <div class="mb-3">
                        <label for="judul" class="form-label fw-bold">Judul</label>
                        <input type="text" class="form-control" id="judul" name="judul" value="<%= buku.judul %>">
                      </div>
                      <div class="mb-3">
                        <label for="pengarang" class="form-label fw-bold">Pengarang</label>
                        <input type="text" class="form-control" id="pengarang" name="pengarang" value="<%= buku.pengarang %>">
                      </div>
                      <div class="mb-3">
                        <label for="tahun" class="form-label fw-bold">Tahun</label>
                        <input type="number" class="form-control" id="tahun" name="tahun" value="<%= buku.tahun %>">
                      </div>
                      <input type="hidden" name="id" value="<%= buku._id %>">
                      <button type="submit" class="btn btn-primary">Update</button>
                    </form>
                  </div>
                </div>
                <form method="POST" action="/manajemen?_method=DELETE" class="d-inline">
                  <input type="hidden" name="id" value="<%= buku._id %>">
                  <button type="submit" class="btn btn-danger badge" onclick="return confirm('Yakin ingi menghapus kontak ?')">Hapus</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>


<!--? Modal Add -->
<div class="modal fade" id="tambahBuku" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="tambahBukuLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title fw-bold" id="tambahBukuLabel">Tambah Buku</h4>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/addBuku" method="post">
          <div class="mb-3">
            <label for="judul" class="form-label fw-bold">Judul</label>
            <input type="text" class="form-control" id="judul" name="judul">
          </div>
          <div class="mb-3">
            <label for="pengarang" class="form-label fw-bold">Pengarang</label>
            <input type="text" class="form-control" id="pengarang" name="pengarang">
          </div>
          <div class="mb-3">
            <label for="tahun" class="form-label fw-bold">Tahun</label>
            <input type="number" class="form-control" id="tahun" name="tahun">
          </div>
          <button type="submit" class="btn btn-primary">Simpan</button>
        </form>
      </div>
    </div>
  </div>
</div>
